object
   refstat_edit_label: XmLabel {
      arguments {
         XmNx = k_pos_x_refstat_edit_label;
         XmNy = k_pos_y_refstat_edit_label;
         XmNlabelString = 'edit: ';
      };
   };

object
   refstat_edit_text: XmText {
      arguments {
         XmNx = k_pos_x_refstat_edit_text;
         XmNy = k_pos_y_refstat_edit_text;
         XmNwidth = 80;
         XmNunitType = XmPIXELS;
         XmNmaxLength = 8;
         XmNvalue = 'XXXX';
      };
      callbacks {
         MrmNcreateCallback =
            procedure xm_call_create_widget( k_widget_refstat_edit_text );
         XmNmodifyVerifyCallback =
            procedure xm_call_text_input( k_widget_refstat_edit_text );
      };
   };

