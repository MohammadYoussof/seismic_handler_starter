      arguments {
         XmNlabelString = 'XXX2';
      };
      callbacks {
         MrmNcreateCallback = procedure
            xm_call_create_widget( k_widget_refstat_station_1+1 );
         XmNactivateCallback =
            procedure xm_call_activate( k_button_refstat_station_1+1 );
      };
   };

