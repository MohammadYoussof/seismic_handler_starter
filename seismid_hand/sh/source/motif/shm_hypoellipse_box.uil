object
   hypo_depth_text: XmText {
      arguments {
         XmNx = k_pos_x_hypo_depth_text;
         XmNy = k_pos_y_hypo_depth_text;
         XmNwidth = 80;
         XmNunitType = XmPIXELS;
         XmNmaxLength = 4;
         XmNvalue = 'free';
      };
      callbacks {
         MrmNcreateCallback =
            procedure xm_call_create_widget( k_widget_hypo_depth_text );
         XmNmodifyVerifyCallback =
            procedure xm_call_text_input( k_widget_hypo_depth_text );
      };
   };

object
   hypo_s_radio_label: XmLabel {
      arguments {
         XmNx = k_pos_x_hypo_s_radio_label;
         XmNy = k_pos_y_hypo_s_radio_label;
         XmNlabelString = 'use S onsets: ';
      };
   };

object
   hypo_s_radiobox: XmRadioBox {
      arguments {
         XmNunitType = XmPIXELS;
         XmNx = k_pos_x_hypo_s_radio;
         XmNy = k_pos_y_hypo_s_radio;
         XmNorientation = XmHORIZONTAL;
         XmNbackground = color(k_bg_colour1,background);
         XmNborderWidth = 1;
         XmNisHomogeneous = false;
      };
      controls {
         XmToggleButton     button_hypo_use_s_yes;
         XmToggleButton     button_hypo_use_s_no;
      };
   };

object
   button_hypo_use_s_yes: XmToggleButton {
      arguments {
         XmNbackground = color(k_bg_colour1,background);
         XmNlabelString = 'yes';
         XmNset = true;
      };
      callbacks {
         MrmNcreateCallback = procedure
            xm_call_create_widget( k_widget_hypo_use_s_yes );
         XmNvalueChangedCallback =
            procedure xm_call_activate( k_button_hypo_use_s_yes );
      };
   };

object
   button_hypo_use_s_no: XmToggleButton {
